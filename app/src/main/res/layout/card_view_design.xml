<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">


        <TextView
            android:id="@+id/conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9EAFDC"
            android:padding="5dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/feedbackIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nitish" />

        <ImageView
            android:id="@+id/feedbackIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/conversation"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/conversation" />

        <TextView
            android:id="@+id/speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintLeft_toLeftOf="@id/conversation"
            app:layout_constraintRight_toRightOf="@id/conversation"
            app:layout_constraintTop_toBottomOf="@id/conversation"
            tools:text="Nitish" />


    </androidx.constraintlayout.widget.ConstraintLayout>
